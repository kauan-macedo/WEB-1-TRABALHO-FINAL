<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Criar Curso</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="container">
			<div class="row justify-content-center mt-5">
				<div class="col-md-6">
					<div class="card">
						<div class="card-header bg-primary text-white">
							<h2 class="text-center mb-0">Exibir Curso</h2>
						</div>
						<div class="card-body">
							<form action="/update/cursos/<%= curso.id_curso %>" method="post">
								<div class="mb-3">
									<label for="nome" class="form-label">Nome do Curso</label>
									<input
										type="text"
										class="form-control"
										id="nome"
										name="nome"
										value="<%= curso.nome_curso %>"
										required
									/>
									<div class="error"></div>
								</div>

								<div class="mb-3">
									<label for="cargaHoraria" class="form-label">Carga Horária</label>
									<input
										type="number"
										class="form-control"
										id="cargaHoraria"
										name="cargaHoraria"
										value="<%= curso.carga_horaria %>"
										placeholder="Ex: 3600"
									/>
									<div class="error"></div>
								</div>

								<div class="mb-3">
									<label for="turno" class="form-label">Turno</label>
									<select class="form-select" id="turno" name="turno">
										<option value="M">Manhã</option>
										<% turnos.forEach((row, index) => { %>
											<% if(row.curso_turno ==turnoCurso) { %>
											<option value="<%= row.curso_turno %>" selected>
											<%= row.curso_turno %>
										</option>
										<% } else {%>
										<option value="<%= row.curso_turno %>"><%= row.curso_turno %></option>
										<% } %> <% }); %>
									</select>
									<div class="error"></div>
								</div>

								<div class="mb-3">
									<label for="tipo" class="form-label">Tipo de Curso</label>
									<select class="form-select" id="tipo" name="tipo">
										<option value="Tecnólogo">Tecnólogo</option>
										<% tipos.forEach((row, index) => { %> <% if(row.curso_tipo ==
										tipoCurso) { %>
										<option value="<%= row.curso_tipo %>" selected>
											<%= row.curso_tipo %>
										</option>
										<% } else {%>
										<option value="<%= row.curso_tipo %>"><%= row.curso_tipo %></option>
										<% } %> <% }); %>
									</select>
									<div class="error"></div>
								</div>

								<div class="d-grid">
									<button type="submit" class="btn btn-primary">Salvar Curso</button>
								</div>
							</form>
						</div>
					</div>

					<div class="text-center mt-3">
						<a href="/cursos" class="btn btn-secondary">
							<i class="bi bi-arrow-left me-2"></i>Voltar
						</a>
					</div>
				</div>
			</div>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
		/>
	</body>
	<style>
		.mb-3.success input{
			border: 2px solid green;
			border-radius: 5px;
		}

		.mb-3.error input{
			border: 2px solid red;
			border-radius: 5px;
		}

		.error{
			color: red;
		}
	</style>
	<script src="/validate_cursos.js"></script>
</html>
